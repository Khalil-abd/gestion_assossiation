{% extends 'base.html.twig' %}
{% block title %}
	Page d'acceuil
{% endblock %}

{% block body %}
	<h3 class="row">
		Information sur l'association
	</h3>
	<div class="row">
		<div class="col-lg-7">
			<table class="table table-bordered">
				<tr>
					<td class="bg-primary">
						<b class="text-light">Nom :</b>
					</td>
					<td>{{ association.nom }}</td>
				</tr>
				<tr>
					<td class="bg-primary">
						<b class="text-light">Date de fondation :</b>
					</td>
					<td>{{association.dateFondation | date('d/m/Y')}}</td>
				</tr>
				<tr>
					<td class="bg-primary">
						<b class="text-light">Domaine :</b>
					</td>
					<td>{{association.domaine}}</td>
				</tr>
			</table>
		</div>
	</div>
{% endblock %}
