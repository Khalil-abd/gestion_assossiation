{% extends 'base.html.twig' %}

{% block title %}
	Bureau Page
{% endblock %}
{% block body %}
	<h3 class="row h3">Informations sur le bureau</h3>
	<div class="row">
		<div class="col-lg-4">
			<table class="table table-bordered">
				<tr>
					<td class="bg-primary">
						<b class="text-light">Date de d√©but :</b>
					</td>
					<td>{{bureau.dateDebut | date('d/m/Y')}}</td>
				</tr>
				<tr>
					<td class="bg-primary">
						<b class="text-light">Date de fin :</b>
					</td>
					<td>{{bureau.dateFin | date('d/m/Y')}}</td>
				</tr>
			</table>
		</div>
	</div>
	<h3 class="row h3">Liste des membres</h3>
	<div class="d-flex flex-row-reverse">
		<a href="{{path('add_membre',{'id': bureau.id})}}" class="btn btn-success ">Nouveau membre</a>
	</div>
	<p></p>
	<div class="row">
		<table class="table table-bordered">
			<thead class="table-primary">
				<tr>
					<th>Nom</th>
					<th>Prenom</th>
					<th>CIN</th>
					<th>Date de naissance</th>
					<th>Phone</th>
					<th>Role</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for membre in bureau.membres %}
					<tr>
						<td>{{membre.nom}}</td>
						<td>{{membre.prenom}}</td>
						<td>{{membre.cin}}</td>
						<td>{{membre.dateNaissance |  date('d/m/Y')}}</td>
						<td>{{membre.phone}}</td>
						<td>{{membre.role}}</td>
						<td>
							<a class="btn btn-success" href="{{ path('edit_membre', {'id': bureau.id , 'membre_id': membre.id}) }}">
								Modifier</a>
							<a class="btn btn-danger" href="{{ path('delete_membre', {'id': membre.id }) }}">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
